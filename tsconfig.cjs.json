{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist/cjs",
    "declaration": false
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "minify.ts",
    "testing.js",
    "test.test.ts",
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
